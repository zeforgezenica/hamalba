@model hamalba.Models.RecenzijaViewModel

@{
    ViewData["Title"] = "Ostavite recenziju";
}

@if (TempData["Info"] != null)
{
    <div class="alert alert-info">
        @TempData["Info"]
    </div>
}

<h2>Ostavite recenziju za @ViewBag.PrimaocIme</h2>
<h4>Za posao: @ViewBag.OglasNaslov</h4>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OglasId" />
            <input type="hidden" asp-for="PrimaocId" />
            <input type="hidden" asp-for="Tip" />

            <div class="form-group">
                <label asp-for="Ocjena" class="control-label"></label>
                <select asp-for="Ocjena" class="form-control">
                    <option value="1">1 - Loše</option>
                    <option value="2">2 - Zadovoljavajuće</option>
                    <option value="3">3 - Dobro</option>
                    <option value="4">4 - Vrlo dobro</option>
                    <option value="5">5 - Izvrsno</option>
                </select>
                <span asp-validation-for="Ocjena" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Komentar" class="control-label"></label>
                <textarea asp-for="Komentar" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Komentar" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Pošalji recenziju" class="btn btn-primary" />
                <a href="@Url.Action("Detalji", "Oglasi", new { id = Model.OglasId })" class="btn btn-secondary">Odustani</a>
            </div>
        </form>
    </div>
</div>