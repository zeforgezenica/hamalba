@model List<hamalba.Models.Korisnik>
@{
    ViewData["Title"] = "Admin Panel - Korisnici";
}

<h2 class="mb-3">Admin Panel - Lista korisnika</h2>

<form asp-action="Index" method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="search" class="form-control" placeholder="Pretraži korisnike..." />
        <button type="submit" class="btn btn-primary">Pretraži</button>
    </div>
</form>

<button class="btn btn-secondary mb-3" onclick="toggleTable()">Prikaži/Sakrij korisnike</button>

<div id="korisniciTabela">
    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Ime</th>
                <th>Prezime</th>
                <th>Email</th>
                <th>Datum registracije</th>
                <th>Verifikovan</th>
                <th>Akcija</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var korisnik in Model)
            {
                <tr>
                    <td>@korisnik.Ime</td>
                    <td>@korisnik.Prezime</td>
                    <td>@korisnik.Email</td>
                    <td>@korisnik.DatumRegistracije.ToString("yyyy-MM-dd")</td>
                    <td>
                        @if (korisnik.Verifikovan)
                        {
                            <span class="text-success fw-bold">✔</span>
                        }
                        else
                        {
                            <span class="text-danger fw-bold">✘</span>
                        }
                    </td>
                    <td>
                        <button class="btn btn-sm btn-secondary" data-bs-toggle="modal" data-bs-target="#postavkeModal-@korisnik.Id">
                            ⚙️ Postavke
                        </button>

                        <!-- Modal za postavke -->
                        <div class="modal fade" id="postavkeModal-@korisnik.Id" tabindex="-1" aria-labelledby="modalLabel-@korisnik.Id" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content">
                                    <div class="modal-header bg-dark text-white">
                                        <h5 class="modal-title" id="modalLabel-@korisnik.Id">Postavke za @korisnik.Ime @korisnik.Prezime</h5>
                                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">

                                        <!-- Verifikacija -->
                                        <form asp-action="ToggleVerifikacija" asp-controller="Admin" method="post" class="mb-2">
                                            <input type="hidden" name="id" value="@korisnik.Id" />
                                            <button class="btn w-100 @(korisnik.Verifikovan ? "btn-warning" : "btn-success")">
                                                @(korisnik.Verifikovan ? "❌ Deverifikuj" : "✅ Verifikuj")
                                            </button>
                                        </form>

                                        <!-- Promjena lozinke -->
                                        <form asp-action="PromijeniLozinku" asp-controller="Admin" method="post" class="mb-2">
                                            <input type="hidden" name="id" value="@korisnik.Id" />
                                            <input type="password" name="newPassword" class="form-control mb-2" placeholder="Nova lozinka" required />
                                            <input type="password" name="confirmPassword" class="form-control mb-2" placeholder="Potvrdi lozinku" required />
                                            <button type="submit" class="btn btn-primary w-100">🔐 Promijeni lozinku</button>
                                        </form>

                                        <!-- Placeholder za email reset -->
                                        <button class="btn btn-outline-secondary w-100 mb-2" disabled>📧 Reset lozinke putem emaila (uskoro)</button>

                                        <!-- Ban -->
                                        <form asp-action="BanUser" asp-controller="Admin" method="post">
                                            <input type="hidden" name="id" value="@korisnik.Id" />
                                            <input type="date" name="banTrajanje" class="form-control mb-2" required />
                                            <button class="btn btn-danger w-100">🚫 Banuj korisnika</button>
                                        </form>

                                        @if (korisnik.BanTrajanje != null && korisnik.BanTrajanje > DateTime.UtcNow)
                                        {
                                            <small class="text-danger">Ban do @korisnik.BanTrajanje?.ToString("yyyy-MM-dd")</small>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        function toggleTable() {
            var table = document.getElementById("korisniciTabela");
            table.style.display = table.style.display === "none" ? "block" : "none";
        }
    </script>
}

