@model hamalba.ViewModels.OglasFilterViewModel

@{
    ViewData["Title"] = "Filtriraj oglase";
}

<h2>Filtriraj oglase</h2>

<form asp-action="Filtriraj" method="post" class="mb-4">
    <div class="form-group">
        <label>Naziv posla:</label>
        <input asp-for="NazivPosla" class="form-control" />
    </div>

    <div class="form-group">
        <label>Lokacija:</label>
        <input asp-for="Lokacija" class="form-control" />
    </div>

    <div class="form-group">
        <label>Minimalna cijena:</label>
        <input asp-for="MinimalnaCijena" class="form-control" type="number" />
    </div>

    <div class="form-group">
        <label>Maksimalna cijena:</label>
        <input asp-for="MaksimalnaCijena" class="form-control" type="number" />
    </div>

    <button type="submit" class="btn btn-success mt-2">Filtriraj</button>
</form>

@if (Model.Rezultati != null && Model.Rezultati.Any())
{
    <h4>Rezultati:</h4>
    <ul class="list-group">
        @foreach (var oglas in Model.Rezultati)
        {
            <li class="list-group-item">
                <strong>@oglas.Naslov</strong> - @oglas.Lokacija - @oglas.Cijena KM
            </li>
        }
    </ul>
}
else if (Model.Rezultati != null)
{
    <div class="alert alert-warning">Nema rezultata za prikaz.</div>
}


