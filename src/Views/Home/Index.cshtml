@model List<hamalba.Models.Oglas>

@{
    ViewData["Title"] = "Početna";
}

<!-- Hero section -->
<div class="hero-section text-center text-white d-flex flex-column justify-content-center align-items-center">
    <h1 class="display-4 fw-bold text-black">HamalBa</h1>
    <p class="text-black">Sitni poslovi. Velike uštede vremena.</p>
    <a asp-area="Views" asp-controller="Oglasi" asp-action="SviOglasi" class="btn btn-dark mt-2">Pregled oglasa</a>
</div>

<!-- Izdvojeni oglasi -->
<section class="container my-5">
    <h2 class="text-center mb-4">Izdvojeni oglasi</h2>
    <div class="row justify-content-center">
        @foreach (var oglas in Model)
        {
            <div class="col-sm-6 col-md-3 mb-3">
                <a asp-controller="Oglasi" asp-action="Detalji" asp-route-id="@oglas.OglasId" class="text-decoration-none text-dark">
                    <div class="card shadow-sm h-100" style="cursor: pointer;">
                        <img src="images/placeholder.jpg" class="card-img-top" alt="Slika oglasa">
                        <div class="card-body">
                            <h5 class="card-title">@oglas.Naslov</h5>
                            <p><strong>@oglas.Cijena KM</strong></p>
                            <p>@oglas.Lokacija</p>
                            <p>@oglas.Datum.ToString("dd.MM.yyyy.")</p>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</section>

<!-- Kako funkcioniše -->
<section class="bg-light py-5">
    <div class="container">
        <h2 class="text-center mb-5">Kako funkcioniše HamalBa ?</h2>
        <div class="row text-center">
            <div class="col-md-4 mb-4">
                <div class="p-4 border rounded-3 h-100">
                    <i class="bi bi-briefcase fs-1 text-danger"></i>
                    <h5 class="mt-3">1. Objavi posao</h5>
                    <p>Unesi detalje, lokaciju i budžet – sve traje manje od minute.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="p-4 border rounded-3 h-100">
                    <i class="bi bi-search fs-1 text-danger"></i>
                    <h5 class="mt-3">2. Pronađi radnika</h5>
                    <p>Pogledaj ponude i ocjene dostupnih ljudi.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="p-4 border rounded-3 h-100">
                    <i class="bi bi-check-circle fs-1 text-danger"></i>
                    <h5 class="mt-3">3. Završeno !</h5>
                    <p>Posao je riješen – ocijeni iskustvo i nastavi dalje.</p>
                </div>
            </div>
        </div>
    </div>
</section>
