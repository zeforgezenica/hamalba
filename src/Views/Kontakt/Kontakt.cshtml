@model hamalba.Models.Kontakt

@{
    ViewData["Title"] = "Kontakt forma";
}

<div class="kontakt-page-container">
    <div class="kontakt-card">
        <h2 class="mb-4 kontakt-naslov">Kontaktiraj nas</h2>

        <form asp-action="SendMessage" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Naslov" class="form-label"></label>
                <input asp-for="Naslov" class="form-control" />
                <span asp-validation-for="Naslov" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" type="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Poruka" class="form-label"></label>
                <textarea asp-for="Poruka" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Poruka" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Pošalji poruku</button>
        </form>
    </div>

    <div class="kontakt-mapa">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d45763.59311646558!2d17.89178314220042!3d44.202440996549136!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x475ee26b2c197a21%3A0x58a707c9607b8702!2sZenica!5e0!3m2!1sen!2sba!4v1744983530468!5m2!1sen!2sba"
                width="100%"
                height="100%"
                style="border:0;"
                allowfullscreen=""
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade">
        </iframe>
    </div>

</div>
